<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSpecialtyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Код: 1-40 01 01"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvSpecialtyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Название специальности"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSpecialtyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Описание"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBudgetPlaces"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Бюджет: 50"
                android:textSize="12sp"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/tvContractPlaces"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Контракт: 100"
                android:textSize="12sp"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/tvStudyYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 года"
                android:textSize="12sp" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnEditSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="изм"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDeleteSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="уд"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>