<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Belarusuniversities"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- АКТИВИТИ ЛОГИНА (ПЕРВОЕ ОКНО) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Belarusuniversities">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ГЛАВНОЕ АКТИВИТИ (СПИСОК КОЛЛЕДЖЕЙ) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Belarusuniversities" />

        <!-- АКТИВИТИ СПЕЦИАЛЬНОСТЕЙ -->
        <activity
            android:name=".ui.SpecialtiesActivity"
            android:exported="false"
            android:theme="@style/Theme.Belarusuniversities" />

        <!-- АКТИВИТИ СТУДЕНТОВ -->
        <activity
            android:name=".ui.StudentsActivity"
            android:exported="false"
            android:theme="@style/Theme.Belarusuniversities" />

        <!-- ⭐ ДОБАВИТЬ ЭТО: АКТИВИТИ ПРЕПОДАВАТЕЛЕЙ -->
        <activity
            android:name=".ui.TeachersActivity"
            android:exported="false"
            android:theme="@style/Theme.Belarusuniversities" />

        <!-- ⭐ ДОБАВИТЬ ЭТО: АКТИВИТИ КАРУСЕЛИ -->
        <activity
            android:name=".ui.CarouselActivity"
            android:exported="false"
            android:theme="@style/Theme.Belarusuniversities" />

    </application>

</manifest>